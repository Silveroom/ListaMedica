<%= render 'layouts/share/error_messages', object: @pacientes %>

<div class="container">
	<%= form_for(@pacientes, html: {class: 'form-horizontal'}) do |f| %>
	<div class="form-group">
		<%= f.label :nombre, class: 'form-label' %>
		<%= f.text_field :nombre, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :appaterno, class: 'form-label' %>
		<%= f.text_field :appaterno, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :apmaterno, class: 'form-label' %>
		<%= f.text_field :apmaterno, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :direccion, class: 'form-label' %>
		<%= f.text_field :direccion, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :numerotel, class: 'form-label' %>
		<%= f.text_field :numerotel, class: 'form-control' %>
	</div>


		<%= f.submit nil, class: 'btn btn-mini btn-success' %>


	<% end %>
</div>